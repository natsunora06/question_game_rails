<%= form_for @question, method: :post do |f|%>
<!--<= form_with(model: answer_history_url, local: true) do |f|%>-->
<p>
  <strong>問題:</strong>
  <%= @question.question %>
</p>

  <table>
    <thead>
      <tr>
        <th>解答選択</th>
      </tr>
    </thead>

    <tbody>
    <% @answers %>
      <% @answers.each do |answer| %>
        <% if @question.id == answer.question_id %>
          <tr>
            <td>
              <%= link_to answer.answer, "/questions/#{@question.id}/answer?answerid=#{answer.id}" %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <p id="notice"><%= flash[:notice] %></p>

<% end %>

<br>

<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
